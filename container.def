Bootstrap: docker
From: ubuntu:24.04

# %files

#   Gemfile $HOME/
#   package.json $HOME/

%post
  export DEBIAN_FRONTEND=noninteractive

  apt-get update

  apt-get install -y --no-install-recommends  git \
                                              gh \
                                              less \
                                              python3 \
                                              python3.12-venv \
                                              python3-pip \
                                              build-essential \
                                              ruby \
                                              ruby-dev \
                                              libyaml-dev \
                                              bundler \
                                              nodejs \
                                              npm \
                                              ditaa \
                                              cmake \
                                              g++ \
                                              gdb \
                                              libgmp-dev \
                                              clang-format \
                                              clang-tidy \
                                              libelf-dev \
                                              gcc-riscv64-linux-gnu \
                                              gcc-riscv64-unknown-elf \
                                              libc6-dev-riscv64-cross
  # cleanup
  apt-get clean autoclean
  apt-get autoremove -y
  rm -rf /var/lib/{apt, dpkg, cache, log}

