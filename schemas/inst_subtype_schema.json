{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Instruction Subtype Schema",
  "description": "Schema for instruction subtype definitions",

  "type": "object",
  "properties": {
    "$schema": {
      "const": "inst_subtype_schema.json#"
    },
    "kind": {
      "const": "inst_sub_type"
    },
    "name": {
      "type": "string",
      "$ref": "schema_defs.json#/$defs/inst_subtype_name"
    },
    "parent": {
      "type": "object",
      "additionalProperties": false,
      "required": ["$ref"],
      "properties": {
        "$ref": {
          "type": "string",
          "pattern": "inst_type/[A-Z][A-Za-z0-9\\-]*\\.yaml#"
        }
      }
    },
    "fields": {
      "type": "object",
      "additionalProperties": false,
      "required": ["opcodes"],
      "properties": {
        "opcodes": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "location"],
            "properties": {
              "name": {
                "type": "string"
              },
              "location": {
                "$ref": "schema_defs.json#/$defs/field_location"
              }
            }
          }
        },
        "variables": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "location", "type"],
            "properties": {
              "name": {
                "type": "string"
              },
              "location": {
                "$ref": "schema_defs.json#/$defs/field_location"
              },
              "type": {
                "type": "object",
                "required": ["$ref"],
                "additionalProperties": false,
                "properties": {
                  "$ref": {
                    "type": "string",
                    "pattern": "inst_var_type/.+\\.json#"
                  }
                }
              }
            }
          }
        }
      }
    },
    "$source": {
      "description": "Path to the source file. Used by downstream tooling; not expected to be found in handwritten files",
      "type": "string"
    }
  },
  "required": ["$schema", "kind", "name", "fields"],
  "additionalProperties": false
}
