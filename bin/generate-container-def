#!/usr/bin/env bash

ROOT=$(dirname $(dirname $(realpath ${BASH_SOURCE[0]})))
source $ROOT/bin/setup

echo "# This file is auto-generated by bin/generate-container-def" > container.def
${RUN} /opt/venv/bin/spython recipe .devcontainer/Dockerfile | sed '/%runscript/,$d' >> container.def
chmod 444 container.def
