{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "types": ["mocha", "node"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/**/*.ts"]
}
