{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "type": "object",
  "properties": {
    "schema": {
      "const": "expression_schema.json#"
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "e": {
            "type": "string",
            "description": "The expression to test"
          },
          "=": {
            "type": "string",
            "description": "The expected result of the expression, in porcelian IDL"
          },
          "d": {
            "type": "string",
            "description": "Description of the test"
          },
          "p": {
            "type": "object",
            "description": "Parameter values to set before the test",
            "patternProperties": {
              "^[A-Z][A-Z0-9_]*$": {
                "oneOf": [
                  {
                    "type": "integer"
                  },
                  {
                    "type": "string"
                  },
                  {
                    "type": "boolean"
                  }
                ]
              }
            },
            "additionalProperties": false
          },
          "w": {
            "type": "string",
            "description": "Warning message expected to be generated by the expression"
          }
        },
        "required": ["e", "=", "d"],
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  },
  "required": ["schema", "tests"]
}
