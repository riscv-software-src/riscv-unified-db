{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeAll",
    "helpers:pinGitHubActionDigestsToSemver",
    "schedule:nonOfficeHours"
  ],
  "ignorePaths": [".github/workflows/regress.yaml"],
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchFileNames": [
        "package.json",
        "package-lock.json",
        "requirements.txt"
      ],
      "bumpVersions": [
        {
          "name": "Update container version",
          "filePatterns": ["bin/.container-tag"],
          "bumpType": "minor",
          "matchStrings": ["(?<version>[^\\s]+)"]
        }
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^tools/test/*-tests.yaml$/"],
      "matchStrings": [
        "(?:^|\\r\\n|\\r|\\n|$)\\s+uses:\\s+(?<packageName>.+/.+)@(?<currentDigest>[0-9a-fA-F]+?)\\s*(# (?<currentValue>.*?))?(?:^|\\r\\n|\\r|\\n|$)"
      ],
      "datasourceTemplate": "github-tags",
      "registryUrlTemplate": "https://github.com"
    }
  ],
  "git-submodules": {
    "enabled": true
  },
  "pre-commit": {
    "enabled": true
  },
  "dockerfile": {
    "enabled": false
  },

  "timezone": "America/Los_Angeles"
}
