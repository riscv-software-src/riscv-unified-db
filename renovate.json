{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeAll",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchFileNames": [
        "package.json",
        "package-lock.json",
        "requirements.txt",
        ".devcontainer/Dockerfile"
      ],
      "bumpVersions": [
        {
          "name": "Update container version",
          "filePatterns": ["bin/.container-tag"],
          "bumpType": "minor",
          "matchStrings": ["(?<version>[^\\s]+)"]
        }
      ]
    }
  ],
  "git-submodules": {
    "enabled": true
  },
  "pre-commit": {
    "enabled": true
  }
}
